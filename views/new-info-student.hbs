{{>navbar}}

<div class="container mt-2">
  <div class="card">
    <div class="card-header bg-success text-white">
      <center>
        <h1>Agregar Alumno</h1>
      </center>
    </div>
    <form class="card-body" method="post" action="/new-info-student">
      <input
        class="form-control"
        type="text"
        name="name"
        id="name"
        placeholder="Nombres"
      />
      <br />
      <input
        class="form-control"
        type="text"
        name="last_name"
        id="last_name"
        placeholder="Apellidos"
      />
      <br />
      <input
        class="form-control"
        type="email"
        name="email"
        id="email"
        placeholder="Correo"
      />
      <br />
      <input
        class="form-control"
        type="text"
        name="phone"
        id="phone"
        placeholder="Telefono"
      />
      <br />
      <input
        class="form-control"
        type="text"
        name="id"
        id="id"
        placeholder="Matricula"
      />
      <br />
      <label class="form-label" for="career">Carrera:</label>
      <select class="form-select" name="career" id="career">
        <option value="ISC">ISC</option>
      </select>
      <br />
      <label class="form-label" for="semester">Semestre:</label>
      <select class="form-select" name="semester" id="semester">
        {{#each subDir}}
        <option value="{{this.semester}}">{{this.semester}}</option>
        {{/each}}
      </select>
      <br />
      <center>
        <a href="/" class="btn btn-success">
          Inicio
        </a>
        <input class="btn btn-success" type="submit" value="Agregar" />
      </center>
    </form>
  </div>
</div>