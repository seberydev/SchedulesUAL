<center>
  <div class="container p-4">
    <div class="card">
      <div class="card-header">
        <h1>Horarios-Maestros</h1>
      </div>
      <div class="card-body">
        {{#if schedule}}
          <table class="table table-sm" id="table">
            <thead>
              <tr class="text-center">
                <th scope="col">Maestro</th>
                <th scope="col">Materia</th>
                <th scope="col">Semestre</th>
                <th scope="col">Aula</th>
                <th scope="col">Horas</th>
                <th id="btn" scope="col">Opciones</th>
              </tr>
            </thead>
            <tbody class="text-center">
              {{#each schedule}}
                <tr>
                  <td>{{this.teacher}}</td>
                  <td>{{this.subject}}</td>
                  <td>{{this.semester}}</td>
                  <td>{{this.room}}</td>
                  <td>{{this.hour}}</td>
                  <td><a id="btn"
                      class="btn btn-danger btn-sm"
                      href="/delete-schedule/{{this._id}}"
                    >
                      Borrar
                    </a></td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        {{else}}
          <h4>No hay horarios</h4>
        {{/if}}
      </div>
      <div class="card-footer">
        <a href="/" class="btn btn-primary">
          Inicio
        </a>
        <a href="/new-schedule" class="btn btn-dark">Agregar Horario</a>
        <input
          class="btn btn-dark"
          type="button"
          name="png"
          id="png"
          value="Descargar Horario"
        />
      </div>
    </div>
  </div>
</center>