{{>navbar}}

<div class="container mt-2">
  <div class="card">
    <div class="card-header bg-success text-white">
      <center>
        <h1>Agregar Horario</h1>
      </center>
    </div>
    <form class="card-body" action="/new-schedule" method="POST">
      <label class="form-label">Semestre a asignar:</label>
      <select class="form-select" id="semester" name="semester">
        <option value="1ero">Primero</option>
        <option value="3ero">Tercero</option>
      </select>
      <br />
      <label class="form-label" for="room">Aula a asignar:</label>
      <select class="form-select" name="room" id="room">
        <option value="ASD1">ASD1</option>
        <option value="ASD2">ASD2</option>
        <option value="ASD3">ASD3</option>
        <option value="ASD4">ASD4</option>
        <option value="ISC-LAB">ISC-LAB</option>
        <option value="CIP1">CIP1</option>
        <option value="CIP2">CIP2</option>
        <option value="CIP3">CIP3</option>
        <option value="CIP4">CIP4</option>
      </select>
      <br />
      <label class="form-label">Seleccionar Materia:</label>
      <select class="form-select" name="subject" id="subject">
        {{#each subDir}}
          <optgroup label="{{this.semester}}">
            {{#each this.subjects}}
              {{#each this}}
                <option value="{{@key}}">{{@key}}</option>
              {{/each}}
            {{/each}}
          </optgroup>
        {{/each}}
      </select>
      <br />
      <label class="form-label" for="date_start">Inicio de la Materia:</label>
      <input
        class="form-control"
        type="date"
        name="date_start"
        id="date_start"
      />
      <br />
      <label class="form-label" for="date_end">Fin de la Materia:</label>
      <input
        class="form-control"
        type="date"
        name="date_end"
        id="date_end"
      />
      <br />
      <label class="form-label" for="teacher">Seleccionar Maestros:</label>
      <select class="form-select" name="teacher" id="teacher">
        {{#each tdir}}
          <option value="{{this.name}} {{this.last_name}}">{{this.name}}
            {{this.last_name}}</option>
        {{/each}}
      </select>
      <br />
      <label class="form-label" for="hour">Horario:</label>
      <select class="form-select" name="hour" id="hour">
        <option value="9:00 - 11:00">9:00 - 11:00</option>
        <option value="11:30 - 13:30">11:30 - 13:30</option>
      </select>
      <br />
      <center>
        <a class="btn btn-success" href="/">Inicio</a>
        <input class="btn btn-success" type="submit" value="Crear" />
      </center>
    </form>
  </div>
</div>